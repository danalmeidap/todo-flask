{% extends "base.html.j2" %}

{% block content %}
<div class="container">
<h1>{{config.get('TITLE')}}</h1>

<div class="jumbotron">
<ul class="list-group">
    {% for task in tasks %}
    <li class="list-group-item">
        <a href="{{url_for('task.detail', slug=task.slug)}}">{{task.title}}</a>
    </li>
    {% endfor %}
</ul>
</div>

</div>
{% endblock %}